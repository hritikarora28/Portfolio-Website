<!DOCTYPE html>
<html lang="en">
	<head>
		{{>header}}

		<title>Contact-me</title>
	</head>
	<body>
		
        {{>navbar}}
		<div class="container fluid">
			<div class="row">
				<div class="col-md-10 col-12 mx-auto">
          <div class="row">
            <!-- left side -->
            <div class="col-md-6 col-12 main_header_left">
                <div class="carousel-item active">
                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img class="w-100" src="contact.png" alt="First slide">
                          </div>
                          <div class="carousel-item">
                            <img class="w-100" src="contact1.png" alt="Second slide">
                          </div>
                          <div class="carousel-item">
                            <img class="w-100" src="contact3.png" alt="Third slide">
                          </div>
                        </div>
                      </div>
                  </div>
			  
            </div>

            <div class="col-md-6 col-12 main_header_right">
				<form>
                    <div class="form-group">
                      <label for="exampleFormControlInput1">Email address</label>
                      <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Phone-Number</label>
                        <input type="phonenumber" class="form-control" id="exampleFormControlInput1" placeholder="987654321">
                      </div>
                    
                    <div class="form-group">
                      <label for="exampleFormControlSelect2">Why you are here</label>
                      <select multiple class="form-control" id="exampleFormControlSelect2">
                        <option>For jobs</option>
                        <option>For freelancing Work</option>
                        <option>Regarding some help</option>
                        <option>Others</option>
                        
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="exampleFormControlTextarea1">Message For me</label>
                      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>

                  </form>
					  </div>
					</div>
				  </div>
            </div>

          </div>
        </div>
			</div>
		</div>

		
			{{>footer}}
		
		{{>script}}
	</body>
</html>
